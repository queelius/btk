[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg,
    .tox,
    .venv,
    venv,
    htmlcov,
    .pytest_cache
ignore = 
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (we use max-line-length)
    E501
per-file-ignores =
    # F401: imported but unused
    __init__.py:F401
max-complexity = 10